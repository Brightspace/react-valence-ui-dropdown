{
  "name": "react-vui-dropdown",
  "version": "0.0.1",
  "description": "React component for a dropdown menu that uses VUI Dropdown Styling",
  "directories": {
    "test": "test"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build:js": "eslint src && babel --presets react ./src --out-dir ./dist",
    "build:sass": "node-sass --output-style expanded dropdownMenu.scss dist/dropdownMenu.css",
    "build": "npm run build:js && npm run build:sass",
    "pretest": "npm run build",
    "postinstall": "bower install",
    "report-coverage": "coveralls < ./coverage/lcov.info",
    "test:lint:css": "csslint ./dist/dropdownMenu.css",
    "test:lint:js": "eslint --ext .js --ext .jsx ./src",
    "test:unit": "jest --coverage",
    "test": "npm run build && npm run test:lint:css && npm run test:lint:js && npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/react-valence-ui-dropdown.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui",
    "menu",
    "dropdown",
    "context"
  ],
  "author": "D2L Coproration",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/react-valence-ui-dropdown/issues"
  },
  "homepage": "https://github.com/Brightspace/react-valence-ui-dropdown",
  "dependencies": {
    "bower": "^1.6.5"
  },
  "peerDependencies": {
    "react": "^0.14.2"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-cli": "^6.0.15",
    "babel-jest": "^5.3.0",
    "classnames": "^2.2.0",
    "coveralls": "^2.11.4",
    "csslint": "^0.10.0",
    "eslint": "^1.8.0",
    "eslint-config-brightspace": "0.0.3",
    "eslint-plugin-react": "^3.6.3",
    "jest-cli": "^0.7.1",
    "node-sass": "^3.4.1",
    "react": "^0.14.2",
    "react-addons-test-utils": "^0.14.2",
    "react-dom": "^0.14.2",
    "rimraf": "^2.4.3"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testDirectoryName": "test/unit",
    "unmockedModulePathPatterns": [
      "react"
    ],
    "collectCoverageOnlyFrom": {
      "index.js": true,
      "dist/menuItem.js": true,
      "dist/dropdownMenu.js": true,
      "dist/menuList.js": true
    }
  }
}
